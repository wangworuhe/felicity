/* pages/storage/upload/index.wxss */
.container {
  padding: 32rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
  line-height: 1.6;
}

.result {
  margin-top: 40rpx;
}

.image-container {
  width: 100%;
  height: 500rpx;
  margin-bottom: 32rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  overflow: hidden;
}

.image-container image {
  width: 100%;
  height: 100%;
}

.file-info {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.file-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.file-value {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.copy-btn {
  font-size: 26rpx;
  color: #07c160;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.actions button {
  flex: 1;
}
