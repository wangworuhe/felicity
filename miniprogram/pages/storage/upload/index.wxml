<!--pages/storage/upload/index.wxml-->
<view class="container">
  <view class="section">
    <view class="section-title">上传文件到云存储</view>
    <view class="description">支持选择本地图片上传到云存储空间</view>

    <button type="primary" bindtap="uploadImg" wx:if="{{!haveGetImgSrc}}">
      选择图片上传
    </button>
  </view>

  <view class="result" wx:if="{{haveGetImgSrc}}">
    <view class="image-container">
      <image src="{{imgSrc}}" mode="aspectFit" bindtap="previewImage"></image>
    </view>
    <view class="file-info">
      <view class="file-label">文件ID</view>
      <view class="file-value">
        <text>{{imgSrc}}</text>
        <text class="copy-btn" bindtap="copyFileId">复制</text>
      </view>
    </view>
    <view class="actions">
      <button type="default" bindtap="clearImgSrc">清除</button>
      <button type="primary" bindtap="uploadImg">重新上传</button>
    </view>
  </view>
</view>
