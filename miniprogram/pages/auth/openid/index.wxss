/* pages/auth/openid/index.wxss */
.container {
  padding: 32rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
  line-height: 1.6;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.button-group button {
  flex: 1;
}

.result {
  margin-top: 40rpx;
  padding: 32rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
}

.result-item {
  margin-bottom: 24rpx;
}

.result-item:last-child {
  margin-bottom: 0;
}

.result-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.result-value {
  font-size: 30rpx;
  color: #333;
  word-break: break-all;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.copy-btn {
  font-size: 26rpx;
  color: #07c160;
  flex-shrink: 0;
  margin-left: 16rpx;
}
