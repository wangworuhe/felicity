/* pages/database/sales/index.wxss */
.container {
  padding: 32rpx;
}

.header {
  margin-bottom: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.actions {
  display: flex;
  gap: 16rpx;
}

.actions button {
  flex-shrink: 0;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.record-item {
  padding: 32rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.record-info {
  display: flex;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.record-region {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-city {
  font-size: 30rpx;
  color: #666;
}

.record-sales {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.record-sales text {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
}

.record-sales input {
  flex: 1;
  font-size: 30rpx;
  padding: 8rpx 16rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
}

.record-actions {
  text-align: right;
}

.empty-state {
  padding: 80rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.modal-content {
  padding: 20rpx 0;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-item input {
  width: 100%;
  font-size: 30rpx;
  padding: 16rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  box-sizing: border-box;
}
