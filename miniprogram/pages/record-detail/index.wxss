.container {
  min-height: 100vh;
  background: #FFF8E7;
  padding: 20px;
  box-sizing: border-box;
  padding-bottom: 100px;
}

.record-card {
  background: white;
  border-radius: 16px;
  padding: 24px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  flex-direction: column;
  margin-bottom: 16px;
  padding-bottom: 16px;
  border-bottom: 1px solid #f0f0f0;
}

.record-time {
  font-size: 16px;
  color: #999;
  margin-bottom: 8px;
}

.record-location {
  font-size: 14px;
  color: #FF6B6B;
}

.card-content {
  margin-bottom: 16px;
}

.content-text {
  font-size: 16px;
  line-height: 1.8;
  color: #333;
  word-break: break-all;
}

.card-image {
  margin-top: 16px;
}

.record-img {
  width: 100%;
  height: 300px;
  border-radius: 12px;
  object-fit: cover;
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20px;
  background: white;
  display: flex;
  gap: 12px;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.06);
}

.action-btn {
  flex: 1;
  height: 48px;
  border-radius: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  border: none;
}

.share-btn {
  background: #FFD93D;
  color: #333;
}

.delete-btn {
  background: #FFF9E6;
  color: #FF6B6B;
  border: 1px solid #FFD93D;
}

.btn-icon {
  font-size: 20px;
  margin-right: 6px;
}

.btn-text {
  font-size: 16px;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  font-size: 16px;
  color: #999;
}
