.container {
  min-height: 100vh;
  background: #FFF8E7;
  padding: 20px;
  box-sizing: border-box;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 20px;
}

.empty-text {
  font-size: 16px;
  color: #999;
  text-align: center;
}

.list {
  padding-bottom: 20px;
}

.record-card {
  background: white;
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  transition: transform 0.2s;
}

.record-card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
  padding-bottom: 12px;
  border-bottom: 1px solid #f0f0f0;
}

.card-time {
  font-size: 13px;
  color: #999;
}

.card-location {
  font-size: 12px;
  color: #FF6B6B;
  background: #FFF9E6;
  padding: 4px 8px;
  border-radius: 4px;
}

.card-content {
  margin-bottom: 12px;
}

.content-text {
  font-size: 15px;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
}

.card-image {
  margin-top: 12px;
}

.card-img {
  width: 100%;
  height: 200px;
  border-radius: 12px;
  object-fit: cover;
}

.load-more {
  text-align: center;
  padding: 20px 0;
  font-size: 14px;
  color: #999;
}

.footer-tip {
  text-align: center;
  padding: 20px 0;
  font-size: 13px;
  color: #ccc;
}
