.edit-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.edit-modal {
  position: fixed;
  left: 5%;
  right: 5%;
  top: 10%;
  bottom: 10%;
  background: #fff;
  border-radius: 16px;
  z-index: 101;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
  flex-shrink: 0;
}

.modal-title {
  font-size: 17px;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 24px;
  color: #999;
  padding: 0 4px;
  line-height: 1;
}

.modal-body {
  flex: 1;
  padding: 16px 20px;
  overflow-y: auto;
}

.edit-textarea {
  width: 100%;
  min-height: 120px;
  font-size: 16px;
  line-height: 1.8;
  color: #333;
  box-sizing: border-box;
}

.edit-placeholder {
  color: #ccc;
}

.media-section {
  margin-top: 16px;
}

.media-label {
  font-size: 13px;
  color: #999;
  margin-bottom: 8px;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.image-item {
  position: relative;
  width: 80px;
  height: 80px;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8px;
}

.remove-btn {
  position: absolute;
  top: -6px;
  right: -6px;
  width: 20px;
  height: 20px;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 14px;
  text-align: center;
  line-height: 20px;
  border-radius: 50%;
}

.voice-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.voice-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 12px;
  background: #f5f5f5;
  border-radius: 8px;
}

.voice-play-area {
  display: flex;
  align-items: center;
  gap: 8px;
  flex: 1;
}

.voice-play-icon {
  font-size: 14px;
  color: #FF8C00;
}

.voice-text {
  font-size: 14px;
  color: #666;
}

.recording-tip {
  margin-top: 12px;
  padding: 8px 12px;
  background: #fff3f3;
  border-radius: 8px;
  text-align: center;
  font-size: 13px;
  color: #FF4D4F;
}

.modal-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 20px;
  border-top: 1px solid #f0f0f0;
  flex-shrink: 0;
}

.toolbar {
  display: flex;
  gap: 16px;
}

.tool-btn {
  padding: 6px 12px;
  border-radius: 16px;
  background: #f5f5f5;
}

.tool-btn.has-media {
  background: #e6f7e6;
}

.tool-btn.recording {
  background: #fff3f3;
}

.tool-label {
  font-size: 13px;
  color: #666;
}

.tool-btn.recording .tool-label {
  color: #FF4D4F;
}

.save-btn {
  padding: 6px 20px !important;
  border-radius: 16px !important;
  font-size: 14px !important;
  background: #e0e0e0 !important;
  color: #999 !important;
  border: none !important;
  line-height: 1.5 !important;
}

.save-btn.active {
  background: #07c160 !important;
  color: #fff !important;
}

.save-btn::after {
  border: none;
}
